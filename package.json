{
  "name": "joe-webserver",
  "version": "1.0.0",
  "description": "简易静态文件服务器，支持设置本地代理",
  "main": "index.js",
  "bin": {
    "joewebserver": "index.js",
    "JoeWebServer": "index.js"
  },
  "scripts": {
    "start": "node index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:macos": "pkg . --target node18-macos-x64 --output dist/JoeWebServer",
    "build:windows": "pkg . --target node18-win-x64 --output dist/JoeWebServer.exe",
    "build": "npm run build:macos"
  },
  "pkg": {
    "targets": [
      "node18-macos-x64"
    ],
    "outputPath": "dist",
    "output": "JoeWebServer"
  },
  "dependencies": {
    "commander": "^10.0.0",
    "express": "^4.18.2",
    "http-proxy-middleware": "^3.0.5",
    "node-forge": "^1.3.3",
    "open": "^8.4.2"
  },
  "keywords": [
    "webserver",
    "static",
    "https",
    "http"
  ],
  "author": "qiao_915@yeah.net",
  "license": "MIT"
}
